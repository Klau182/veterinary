<div class="container">

<h2>Editando <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
   <br>
    <%= f.label :Contrasena %> <i>(Ingresa tu nueva contrasena)</i><br />
    
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
  <br>
    <%= f.label :Reingresa_tu_contrasena %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
  <br>
    <%= f.label :Contrasena_Actual %> <i>(Para efectuar el cambio de tu clave)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Actualizar", id:"btn-click", class: "btn rounded-pill text-white" %>
  </div>
<% end %>
<br>
<h3 class="text">Cancelar mi Usuario</h3>
<br>
<div>Unhappy? <%= button_to "Cerrar Cuenta", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, id:"btn-click", class: "btn rounded-pill text-white" %></div>
<br>
<%= link_to "Volver Atras", :back, id:"btn-click", class: "btn rounded-pill text-white"  %>

</div>